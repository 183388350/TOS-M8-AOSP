######################Kernel Installation#######################
if
		file_getprop ("/tmp/aroma-data/kernel.prop","selected.0") == "1"
then
ui_print("");
ui_print("");
ui_print(">>> Flashing SkyDragon kernel");
set_progress(0.90);
	assert(package_extract_file("boot.img", "/tmp/boot.img"),
	run_program("/sbin/dd", "if=/tmp/boot.img", "of=/dev/block/mmcblk0p43"));
ui_print("Stock Kernel Installed Successfully!");
endif;

##########################SkyDragon##########################

##########################ElementalX##########################
if
	file_getprop("/tmp/aroma-data/kernel.prop","selected.0") == "2" then
	ui_print("Installing ElementalX...");

##########################Voltage##########################
if
   file_getprop("/tmp/aroma/cpu.prop","selected.2") == "1"
     then
   ui_print("Stock voltage");
endif;
if
   file_getprop("/tmp/aroma/cpu.prop","selected.2") == "2"
     then
   ui_print("Undervolting -15mV");
endif;
if
   file_getprop("/tmp/aroma/cpu.prop","selected.2") == "3"
     then
   ui_print("Undervolting -30mV");
endif;
if
   file_getprop("/tmp/aroma/cpu.prop","selected.2") == "4"
     then
   ui_print("Undervolting -45mV");
endif;

##########################Thermals##########################
if
   file_getprop("/tmp/aroma/cpu.prop","selected.3") == "1"
     then
   ui_print("Performance thermals");
endif;
if
   file_getprop("/tmp/aroma/cpu.prop","selected.3") == "2"
     then
   ui_print("Stock thermals");
endif;

##########################Options##########################
if
   file_getprop("/tmp/aroma/mods.prop","item.0.1") == "1"
     then
   ui_print("USB fastcharge enabled");
endif;

if
   file_getprop("/tmp/aroma/mods.prop","item.0.2") == "1"
     then
   ui_print("fsync disabled");
endif;

if
   file_getprop("/tmp/aroma/mods.prop","item.0.3") == "1"
     then
   ui_print("Max screen off frequency disabled");
endif;

if
   file_getprop("/tmp/aroma/mods.prop","item.0.4") == "1"
     then
   ui_print("Reduce button vibration");
endif;

if
   file_getprop("/tmp/aroma/mods.prop","item.0.5") == "1"
     then
   ui_print("Enable gboost");
endif;
if
   file_getprop("/tmp/aroma/mods.prop","item.0.5") == "0"
     then
   ui_print("Disable gboost");
endif;

if
   file_getprop("/tmp/aroma/mods.prop","item.0.6") == "1"
     then
   ui_print("Disable magnetic cover sensor");
endif;

##########################Install EX##########################

package_extract_dir("additions/kernel/elementalx/config", "/tmp");
set_perm(0, 0, 0777, "/tmp/busybox");

ui_print("Cleaning up");
delete("/system/etc/init.d/99elementalx");
delete("/system/etc/init.d/99elementalx~");
delete("/system/etc/elementalx.conf");
delete("/system/etc/init.d/99zram.sh");
delete("/system/lib/modules/cpufreq_limit.ko");
delete("/system/lib/modules/wp_mod.ko");
delete("/system/lib/modules/s2w_mod.ko");
delete("/system/lib/modules/wlan.ko");

ui_print("Installing system files");
package_extract_dir("additions/kernel/elementalx/system", "/system");

set_perm(0, 0, 0777, "/tmp/systemcheck.sh");
run_program("/tmp/systemcheck.sh");

if
   file_getprop("/tmp/aroma/cpu.prop","selected.3") == "1"
     then
   package_extract_dir("additions/kernel/elementalx/thermal/elexcool", "/system/etc");
endif;

if
   file_getprop("/tmp/aroma/cpu.prop","selected.3") == "2"
     then
   package_extract_dir("additions/kernel/elementalx/thermal/stockcool", "/system/etc");
endif;

set_perm_recursive(0, 2000, 0755, 0755, "/system/etc/init.d/99elementalx");
set_perm_recursive(0, 2000, 0755, 0755, "/system/bin/fstrim");
set_perm_recursive(0, 0, 0755, 0644, "/system/lib/modules");
set_perm_recursive(0, 0, 0644, 0644, "/system/etc/thermal-engine.conf");

set_perm(0, 0, 0777, "/tmp/buildconfig.sh");
run_program("/tmp/buildconfig.sh");
run_program("/tmp/busybox", "cp", "/tmp/elementalx.conf", "/system/etc/elementalx.conf");

ui_print("Customizing Kernel");
package_extract_dir("additions/kernel/elementalx/boot", "/tmp");
set_perm(0, 0, 0777, "/tmp/cmdline.sh");
set_perm(0, 0, 0777, "/tmp/abootimg");

run_program("/tmp/cmdline.sh");
run_program("/tmp/abootimg", "-u", "/tmp/boot.img", "-f", "/tmp/bootimg.cfg");

ui_print("Installing Kernel");
run_program("/tmp/busybox", "dd", "if=/tmp/boot.img", "of=/dev/block/mmcblk0p43");

endif;

########################Cleaning Process########################
if
	file_getprop("/tmp/aroma-data/wipe.prop","selected.0") != "2"
then
    ui_print("@Erasing Cache & Dalvik-Cache");
    #assert(unmount("/cache") || ui_print("(Unmounted Cache Partition)"));
    #format("ext4", "EMMC", "/dev/block/mmcblk0p46", "0", "/cache");
	run_program("/sbin/mount", "/cache");
	delete_recursive("/cache");
    delete_recursive("/data/dalvik-cache");
    delete_recursive("/data/resource-cache");
	ui_print("Cache and Dalvik erased successfully!");
endif;
###########################Unmounting###########################

assert(unmount("/data") || ui_print("(Unmounted Data partition..)"));
assert(unmount("/system") || ui_print("(Unmounted System partition..)"));
set_progress(1.0);
ui_print("");
ui_print("Installation Completed Successfully!");
run_program("/sbin/busybox", "cp", "/tmp/recovery.log", "/sdcard/recovery.log");
run_program("/sbin/sleep", "5");