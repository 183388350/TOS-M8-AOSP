#SkyDragon Updater-Script

package_extract_dir("tools", "/tmp");
set_perm_recursive(0, 0, 0777, 0777, "/tmp");

if
    file_getprop("/tmp/aroma-data/wipe.prop","selected.0") == "2"
then
set_progress(0.01);
    ui_print("@Executing Full Wipe");
    ui_print("-- Erasing & formatting /cache as EXT4");
    #assert(unmount("/cache") || ui_print("(Unmounted Cache Partition)"));
	#format("ext4", "EMMC", "/dev/block/mmcblk0p47", "0", "/cache");
    #run_program("/tmp/mkfs.ext4", "-O", "^ext_attr,^has_journal,^huge_file", "-L", "CACHE", "-b", "4096", "-m", "0", "-F", "/dev/block/mmcblk0p47");
    #run_program("/tmp/tune2fs.ext4", "-c", "1", "-m", "0", "-o", "journal_data_writeback", "/dev/block/mmcblk0p47");
    #run_program("/tmp/fsck.ext4", "-Dfy", "/dev/block/mmcblk0p47");
	run_program("/sbin/mount", "/cache");
	delete_recursive("/cache");
    #run_program("/sbin/sleep", "2");
	ui_print("Cache Partition Formatted");
set_progress(0.02);
	ui_print("-- Erasing & formatting /system as EXT4");
    #assert(unmount("/system") || ui_print("(Unmounted System Partition)"));
	#format("ext4", "EMMC", "/dev/block/mmcblk0p46", "0", "/system");
    #run_program("/tmp/mkfs.ext4", "-O", "^ext_attr,^has_journal,^huge_file", "-L", "SYSTEM", "-b", "4096", "-m", "0", "-F", "/dev/block/mmcblk0p46");
	#run_program("/tmp/tune2fs.ext4", "-c", "1", "-m", "0", "-o", "journal_data_writeback", "/dev/block/mmcblk0p46");
	#run_program("/tmp/fsck.ext4", "-Dfy", "/dev/block/mmcblk0p46");
	run_program("/sbin/mount", "/system");
	delete_recursive("/system");
    #run_program("/sbin/sleep", "2");
	ui_print("System Partition Formatted");
set_progress(0.03);
    ui_print("-- Erasing & formatting /data as EXT4");
    #assert(mount("ext4", "EMMC", "/dev/block/mmcblk0p48", "/data") || ui_print("(Mounted Data Partition)"));
	ui_print("Formatting Data Partition Via Script");
    package_extract_file("tools/wipe.sh", "/tmp/wipe.sh");
    set_perm(0, 0, 0777, "/tmp/wipe.sh");
	run_program("/sbin/mount", "/data");
    run_program("/tmp/wipe.sh");;
	ui_print("Data Partition Formatted");
	
set_progress(0.04);

    ui_print("-- Removing Old System Files From SD Card");
    delete_recursive("/sdcard/.android_secure");
    delete_recursive("/sdcard/.bookmark_thumb1");
    delete_recursive("/sdcard/.data");
    delete_recursive("/sdcard/Android");
    delete_recursive("/sdcard/bugreports");
    delete_recursive("/sdcard/LazyList");
    delete_recursive("/sdcard/LOST.DIR");
    delete_recursive("/sdcard/tmp");
    run_program("/sbin/sleep", "2");
set_progress(0.05);
    ui_print("-- Checking Filesystems For Errors");
    run_program("/sbin/e2fsck", "-p", "/dev/block/mmcblk0p45");
    run_program("/sbin/e2fsck", "-p", "/dev/block/mmcblk0p46");
    run_program("/sbin/e2fsck", "-p", "/dev/block/mmcblk0p47");
    run_program("/sbin/sleep", "2");
endif;

##########################Installation##########################

ui_print("@Installing ROM");
show_progress(0.07, 9);
ui_print("-- Mounting Data Partition For Writing");
run_program("/sbin/mount", "/data");
ui_print("Writing Rom Data to Data Partition");
package_extract_dir("data", "/data");
ui_print("Rom Data Written Successfully!");

if
	file_getprop("/tmp/aroma-data/wipe.prop","selected.0") == "1"
then
show_progress(0.7,1380);
	ui_print("-- Erasing & formatting /system as EXT4");
    #assert(unmount("/system") || ui_print("(Unmounted System)"));
	#format("ext4", "EMMC", "/dev/block/mmcblk0p46", "0", "/system");
    #run_program("/tmp/mkfs.ext4", "-O", "^ext_attr,^has_journal,^huge_file", "-L", "SYSTEM", "-b", "4096", "-m", "0", "-F", "/dev/block/mmcblk0p46");
	#run_program("/tmp/tune2fs.ext4", "-c", "1", "-m", "0", "-o", "journal_data_writeback", "/dev/block/mmcblk0p46");
	#run_program("/tmp/fsck.ext4", "-Dfy", "/dev/block/mmcblk0p46");
	run_program("/sbin/mount", "/system");
	delete_recursive("/system");
    run_program("/sbin/sleep", "2");
	ui_print("System Partition Formatted!");
endif;
ui_print("-- Mounting System Partition For Writing");
run_program("/sbin/mount", "/system");
ui_print("Writing Rom System to System Partition");
package_extract_dir("system", "/system");
ui_print("Rom System Written Successfully!");

